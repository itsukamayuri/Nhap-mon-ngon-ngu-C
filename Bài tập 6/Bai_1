#include<stdio.h>
int main()  {
  int n, tong =0,i;
  printf(" hay nhap gia tri cho n: \n");
  scanf ("%d",&n);
  for(int i=1;i<n;i++){
    if(n% i==0) {
      tong =tong+i;
    }
  }
if(tong==n){
  printf("%d la so hoan hao\n",n);
  scanf("%d",&n );
} else{
  printf("%d ko phai la so hoan hao \n ",n);
}

}
